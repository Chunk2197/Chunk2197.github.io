@inherits Statiq.Web.Pages.Page
@{
    Layout = "Layout.cshtml";
    var posts = Context.Inputs.Descendants("posts").OrderByDescending(d => d.Get<DateTime>("Date"));
}

<div class="home">
    <section class="intro">
        @RenderBody()
    </section>

    <section class="posts">
        <h2>Recent posts</h2>
        <ul>
        @foreach(var post in posts)
        {
            <li><a href="@post.Destination">@post.GetString("Title")</a> â€” @post.Get<DateTime>("Date").ToString("yyyy-MM-dd")</li>
        }
        </ul>
    </section>

    <section class="projects">
        <h2>Projects</h2>
        <ul>
            <li><a href="/projects/">Projects page</a></li>
        </ul>
    </section>
</div>
